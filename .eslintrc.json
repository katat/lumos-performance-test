{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "BigInt": true
    },
    "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 2020,
        "ecmaFeatures": {
            "impliedStrict": false
        }
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error", 
            "never"
        ],
        "no-console": 0,
        "no-multi-spaces": [
            "error"
        ],
        "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
        "curly": ["error", "multi-or-nest", "consistent"],
        "strict": ["error", "global"]
    },
    "extends": "eslint:recommended"
}